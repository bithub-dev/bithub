.navbar.navbar-static-top
  .navbar-inner
    = link_to 'BitHub', root_path, class: 'brand'
    %ul.nav
      %li.divider-vertical
      %li{class: ('active' if params[:controller] == 'students')}        
        = link_to students_path do 
          %i.icon-user.icon-white 
          Students
      %li{class: ('active' if params[:controller] == 'tips')}
        /= link_to 'Tips & Tricks', tips_path
        = link_to tips_path do 
          %i.icon-lightbulb.icon-white
          Tips & Tricks
      %li{class: ('active' if params[:controller] == 'resources')}
        /= link_to 'Resources', resources_path
        = link_to resources_path do 
          %i.icon-hand-up.icon-white
          Technical Resources
    .pull-right
      - if logged_in?
        =link_to 'Logout', :logout, class: 'btn pull-right'
        .navbar-text.pull-right
          = "Signed in as "
          = link_to(current_user.full_name, edit_user_path(current_user))

      - else
        =link_to 'Sign Up', [:new, :user], class: 'btn btn-primary'
        =link_to 'Login', :login, class: 'btn btn-primary'
